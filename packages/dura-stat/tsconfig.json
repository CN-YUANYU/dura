{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "module": "UMD",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "build", "__tests__"]
}
