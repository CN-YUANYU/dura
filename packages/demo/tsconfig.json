{
  "compilerOptions": {
    "rootDir": "src",
    "module": "ESNext",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"]
}
